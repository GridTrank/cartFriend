@charset "UTF-8";
/**
 * 下方引入的为uView UI的集成样式文件，为scss预处理器，其中包含了一些"u-"开头的自定义变量
 * 使用的时候，请将下面的一行复制到您的uniapp项目根目录的uni.scss中即可
 * uView自定义的css类名和scss变量，均以"u-"开头，不会造成冲突，请放心使用 
 */
.eva-item .eva-list {
  align-items: flex-start;
  padding: 40rpx;
  border-radius: 0;
}
.eva-item .eva-list .eva-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.eva-item .eva-list .eva-info {
  width: 550rpx;
}
.eva-item .eva-list .eva-info .eva-model {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.eva-item .eva-list .eva-info .eva-model .time {
  font-size: 24rpx;
  color: #666;
}
.eva-item .eva-list .eva-info .eva-model .num-s {
  margin-right: 10rpx;
  display: flex;
  align-items: center;
}
.eva-item .eva-list .eva-info .eva-model .num-s .num-t1 {
  background-color: #f59a23;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  margin-right: 8rpx;
  color: #fff;
  font-size: 28rpx;
}
.eva-item .eva-list .eva-info .eva-model .num-s .num-t2 {
  font-size: 28rpx;
}
.eva-item .eva-list .eva-info .detail-list {
  padding: 30rpx;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 42rpx;
}
.eva-item .eva-list .eva-info .detail-list .detail-item .t1 {
  font-size: 30rpx;
}
.eva-item .show-more {
  color: #f59a23;
  font-size: 32rpx;
}
 .u-input {
  background-color: #fff;
  width: 150rpx;
}
.eva-input {
  position: fixed;
  background-color: #f2f2f2;
  padding: 40rpx;
  bottom: 0;
  z-index: 999;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.eva-input input {
  background-color: #fff;
  width: 80%;
  height: 70rpx;
  border-radius: 8rpx;
  padding-left: 10rpx;
}
.eva-input .send-eva {
  background-color: #f59a23;
  color: #fff;
  padding: 6rpx 20rpx;
  border-radius: 10rpx;
}

